@{
    Layout = null;
    var firstEmployee = (ViewBag.FirstEmployee as EmployeeDirectory.Web.Models.Employee);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Directory App</title>
</head>
<body>
    <h1>Employee Directory App</h1>
    @if(firstEmployee != null)
    {
        <div>
            <label>First Employee:</label>
            <span>@firstEmployee.FullName</span>
        </div>
    }

    <div>
        <form action="/Employee/Lookup" method="post">
            <input type="text" name="body" value="David"/>
            <input type="hidden" name="from" value="+15555555555" />
            <input type="submit" name="submit" value="Go"/>
        </form>
    </div>
</body>
</html>
